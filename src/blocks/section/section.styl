btn-red = #4a0c0c

.section
	background-size cover
	background-position 35% 0
	background-repeat no-repeat
	box-shadow 0 8px 13px rgba(black, .6)
	
	&--antigrav
		background-image url(/img/section__bg--antigrav.jpg)
	
	&--branding
		background-image url(/img/section__bg--branding.jpg)
	
	&__content
		container()
		
		.section__body &
			padding-top 48px
			text-align center
	
	&__face
		padding-top 15px
		padding-bottom 43px
		position relative
		margin-bottom 22px

	&__img
		width 100%
		
		&--tablet
		&--desktop
			display none
	
	&__titles
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		padding-left 11px
		display flex
		flex-direction column
		align-items flex-start
	
	&__emptiness
		flex-grow 1
	
	&__title
		padding-left 2px

		.title
			&__bg
				transform skewX(-20deg) translate(-50%, -50%)
				width calc(100% + 14px)
				margin-left -4px
			
			&__inner
				transform skewX(20deg)

			&__text
				font-size (22rem / 16)
				font-weight 300
				
				b
					font-weight 700
	
	&__text
		align-self flex-end
		padding 4px

		.title
			&__text
				font-size (18rem / 16)
				font-weight 700
	
	&__btn-wrapper
		display inline-block
		position relative
		bottom -16px
		
		&:before
			@extend $pseudo
			
			position absolute
			width 100%
			height 100%
			top 3px
			left 0
			background-color btn-red
			border-radius 17px
			box-shadow 2px 2px 19px 5px rgba(black, .8)

	&__btn
		@extend $btn-reset
		
		position relative
		min-width 177px
		background-color red
		min-height 37px
		border-radius 17px
		font-size (14rem / 16)
		font-weight 700
		text-shadow 1px 1px 2px rgba(black, .8)
		color white
		text-transform uppercase
		box-shadow inset 0 0 10px 1px rgba(black, .34)
			
		
		&:hover
			box-shadow inset 0 0 18px 1px rgba(black, .6)
		
		&:active
			top 3px
	
	&__footer
		background-color rgba(black, .6)
	
	&__foot-title
		display none
	
	&__prices
		display flex
		flex-wrap wrap
		padding-top 33px
		padding-bottom 36px
	
	&__price
		flex-basis 50%
		text-align center
		font-weight 300
		color white
		line-height 1.7em
		
		&:not(:nth-child(n+3))
			margin-bottom 16px
		
		b
			font-weight 900
	
	@media (min-width tablet)
		&__content
			.section__body &
				padding-top 93px
		
		&__face
			padding-top 31px
			padding-bottom 0
			margin-bottom 31px

		&__img
			&--mobile
				display none
			
			&--tablet
				display block
		
		&__titles
			width 79%
			height 63%
		
		&__title
			padding-top 4px
			padding-bottom 3px
			padding-left 6px
			
			.title
				&__text
					font-size (28rem / 16)
		
		&__text
			padding-top 2px
			padding-bottom 1px
			
			&:last-child
				margin-right 6px

			&.title
				& + &
					margin-top 9px
			
			.title
				&__text
					font-size (24rem / 16)
		
		&__btn-wrapper
			bottom -10px
		
		&__prices
			flex-wrap nowrap
			justify-content space-between
			padding-top 35px
			padding-bottom 38px
		
		&__price
			flex-basis 25%

			&:not(:nth-child(n+3))
				margin-bottom 0
	
	@media (min-width desktop)
		&__body
			position relative

		&__content
			.section__body &
				padding-top 124px
			
			.section__footer &
				position relative
				display flex
		
		&__face
			margin-bottom 34px

		&__img
			&--tablet
				display none
			
			&--desktop
				display block
		
		&__titles
			width 63%
			height 40%
		
		&__title
			.title
				&__text
					font-size (34rem / 16)
		
		&__text
			&.title
				padding 0
				padding-top 1px

			.title
				&__text
					font-size (30rem / 16)
		
		&__btn-wrapper
			bottom -14px
			
			&:before
				border-radius 22px
		
		&__btn
			font-size (18rem / 16)
			min-width 240px
			min-height 50px
			border-radius 22px
		
		&__footer
			background none
			position relative
		
		&__lines
			overflow hidden
			position absolute
			top 0
			left 50%
			width 200%
			height 100%
			transform translateX(-50%)

		&__line
			opacity .6
			position absolute
			top 0
			height 100%
			transform skewX(20deg)

			&--colored
				width calc(50% - 347px)
				background-color red
				left 0
			
			&--black
				width calc(50% + 347px)
				right 0
				background-color black
		
		&__foot-title
			display flex
			flex-basis 250px
			flex-shrink 0
			color white
			align-items center
			font-size (28rem / 16)
			font-weight 700
			font-style italic
		
		&__prices
			flex-grow 1
		
		&__price
			font-size (18rem / 16)