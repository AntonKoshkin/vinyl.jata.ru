include ./links

-var projectImg		= '/img/soc-img.jpg'
-var projectFavicon	= '/img/favicon.png'
-var faviconSize		= 32
-var themeColor		= '#4b5a6e'
-var themeTitle		= 'vynil.jata.ru'
-var themeName			= 'vynil.jata.ru'

//- og
-var siteName			= 'vynil.jata.ru'
-var siteLink			= linkTo.root
-var siteTitle			= 'vynil.jata.ru'
-var siteImg			= '/img/soc-img.jpg'
-var siteImgType		= 'image/jpeg'
-var siteImgWidth		= '300px'
-var siteImgHeight	= '300px'

-var needHTML5shiv	= true

meta(charset='UTF-8')

//- search engines
meta(
	name='robots'
	content='index,follow,noodp')

meta(
	name='googlebot'
	content='index,follow')

//- Tells Google not to show the sitelinks search box
meta(
	name='google'
	content='nositelinkssearchbox')

//- Tells Google not to provide a translation for this page
meta(
	name='google'
	content='notranslate')

//- social tags
//- Open Graph
meta(
	property='og:url'
	content=siteLink)
meta(
	property='og:title'
	content=siteTitle)
meta(
	property='og:description'
	content='')
meta(
	property='og:site_name'
	content=siteName)
meta(
	property='og:image'
	content=siteImg)
meta(
	property='og:image:type'
	content=siteImgType)
meta(
	property='og:image:width'
	content=siteImgWidth)
meta(
	property='og:image:height'
	content=siteImgHeight)

//- Verify ownership for Google Search Console
meta(
	name='google-site-verification'
	content='verification_token')

//- Short description of your site's subject
meta(
	name='subject'
	content='Рекламная площадка')

//- Very short sentence describing the purpose of the website
meta(
	name='abstract'
	content='')

//- Describes the topic of the website
meta(
	name='topic'
	content='')

//- Brief summary of the company or purpose of the website
meta(
	name='summary'
	content='')

//- Allows control over how referrer information is passed
meta(
	name='referrer'
	content='never')

//-
	fullwidth on mobile
	block scale
meta(
	name='viewport'
	content='width=device-width')

//-
	i don't know what is it, but i think i need it
meta(
	http-equiv='X-UA-Compatible'
	content='IE=edge,chrome=1')

//-
	it says hand friendly. think i need it
meta(
	name='HandheldFriendly'
	content='true')

//- image for link in social networks
//- meta(
	property='og:image'
	content=projectImg)

//- favicon
link(
	rel='icon'
	type='image/png'
	sizes=faviconSize+'x'+faviconSize
	href=projectFavicon)

//- CHROME, FF, OPERA - color of topbar
meta(
	name='theme-color'
	content=themeColor)

//- IE, EDGE - title for app
meta(
	name='application-name'
	content=themeName)

//- color of topbar in IE
meta(
	name='msapplication-tooltip'
	content=themeTitle)

//- startup path
meta(
	name='msapplication-starturl'
	content='./')

//- color of prev/next buttons in IE
meta(
	name='msapplication-navbutton-color'
	content=themeColor)

//- SAFARI - web app in safari. something like that
meta(
	name='apple-mobile-web-app-capable'
	content='yes')

//- nice transparent color on iphone
meta(
	name='apple-mobile-web-app-status-bar-style'
	content='black-translucent')

//- don't customise phone numbers on the page
meta(
	name='format-detection'
	content='telephone=no')



