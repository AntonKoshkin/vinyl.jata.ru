tenon-text-white = #fe

.tenon
	position absolute
	top 0
	right 20px
	width 360px
	height 37px
	display flex
	align-items stretch
	
	&__shadow
		position absolute
		bottom 1px
		left 50%
		transform translateX(-50%)
		width 280px
		box-shadow 5px 5px 20px rgba(black, .8)
		
		&
		&:before
		&:after
			height 80px
		
		&:before
		&:after
			content ''
			position absolute
			top 100%
			width 50px
		
		&:before
			left 0
			transform-origin left top
			transform rotate(-135deg)
			box-shadow -6px -4px 20px rgba(black, .8)
		
		&:after
			right 0
			transform-origin right top
			transform rotate(135deg)
			box-shadow -3px -7px 20px rgba(black, .8)
	
	&__bg
		position absolute
		top -14%
		left 6%
		width 88%
		height 135%
		transform perspective(150px) rotateX(-45deg)
		overflow hidden
		flex-grow 0
	
	&__inner
		position absolute
		top -17%
		left -20%
		width 132%
		height 130%
		background-image url(pathToStatic + '/img/pattern--blue.jpg')
		background-position 1% 1%
		background-size 100%
		transform perspective(150px) rotateX(34.5deg)

	&__content
		position relative
		flex-grow 1
		display flex
		align-items center
		justify-content center

	&__pointer
		height 21px
		margin-right 5px

		path
			fill red
	
	&__text
		color tenon-text-white
		font-size (14rem / 16)
		font-weight 500
		text-shadow 2px 2px 2px rgba(black, .6)
	
	@media (min-width tablet)
		width 395px
		height 47px
		
		&__shadow
			width 300px
			
			&:before
			&:after
				width 70px
			
			&:before
				transform rotate(-139deg)
			
			&:after
				transform rotate(139deg)
		
		&__bg
			height 140%
	
	@media (min-width desktop)
		width 434px
		
		&__shadow
			width 344px
			
			&:before
				transform rotate(-130deg)
			
			&:after
				transform rotate(130deg)
		
		&__bg
			transform perspective(150px) rotateX(-35deg)
			top -8%
			height 126%