btn-color = #a92021

.callback
	width 278px
	position fixed
	right -290px
	background-image url(pathToStatic + '/img/pattern--red.jpg')
	background-size cover
	border-radius 5px
	border 1px solid white
	padding 23px 18px 38px
	display flex
	flex-direction column
	align-items stretch
	top 115px
	transition all .3s
	box-shadow 5px 5px 20px rgba(black, .8)
	
	&--show
		right 30px
	
	@media (min-width tablet)
		top 130px

	@media (min-width desktop)
		top 135px
	
	&__title
		color white
		font-size (22rem / 16)
		font-weight 900
		text-align center
		text-transform uppercase
		margin-bottom 5px
	
	&__text
		color white
		font-weight 500
		text-align center
		text-transform lowercase
		margin-bottom 25px
	
	&__input
		font-weight 500
		padding 15px 18px
		border none
		border-radius 24px
		margin-bottom 12px
		box-shadow inset 0 0 9px rgba(black, .34),
			1px 1px 9px rgba(black .8)

	&__btn
		@extend $btn-reset
		
		height 50px
		color white
		border-radius 25px
		background-color btn-color
		text-transform uppercase
		font-weight 700
		cursor pointer
		text-shadow 2px 2px 2px rgba(black, .6)
		box-shadow inset 0 0 9px rgba(black, .34),
			3px 3px 9px rgba(black .8)