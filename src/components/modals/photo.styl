.photo
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	padding 10px
	min-width mobile
	justify-content center
	align-items stretch
	display flex
	
	@media (min-width tablet)
		padding 30px
	
	@media (min-width desktop)
		padding 60px
	
	&__img
		background-size contain
		background-position center
		flex-grow 1
		background-repeat no-repeat