.photo
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	padding 10px
	min-width mobile
	justify-content center
	align-items stretch
	display flex
	
	@media (min-width tablet)
		padding 30px
	
	@media (min-width desktop)
		padding 60px
	
	&__img
		background-size contain
		background-position center
		flex-grow 1
		background-repeat no-repeat
		position relative
	
	&__btn
		width 60px
		height 64px
		display flex
		align-items center
		justify-content center
		
		&--prev
			@media (min-width tablet)
				left -30px
		
		&--next
			@media (min-width tablet)
				right -30px

	&__close
		position absolute
		top 0
		right 0

		@media (min-width tablet)
			top -10px
			right -10px

		@media (min-width desktop)
			top -50px
			right -50px
