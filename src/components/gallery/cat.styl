.cat
	list-style-type none
	margin-bottom 30px
	justify-content center
	display flex
	flex-wrap wrap
	
	&--hidden
		display none
	
	&__item
		width calc(50% - 18px)
		display block
		overflow hidden
		white-space nowrap
		text-overflow ellipsis
		text-align left
		font-weight 500
		color white
		position relative
		padding-top 5px
		padding-bottom 5px
		margin-bottom 5px
		
		&:after
			@extend $pseudo, $abs
			size 6px
			
			right 15px
			border-radius 50%
			background-color blue
			top 50%
			transform translateY(-50%)
			display none
		
		@media (max-width (tablet - 1))
			&:nth-child(odd)
				&:not(:last-child)
					text-align right
					padding-right 36px
					width calc(50% + 18px)
				
					&:after
						display inline-block
		
			&:last-child
				text-align center
		
		@media (min-width tablet)
			@media (max-width desktop - 1)
				width calc(33% - 24px)

				&:not(:nth-child(3n))
					&:not(:last-child)
						width calc(33% + 12px)
						padding-right 36px
					
						&:after
							display inline-block
				
				&:nth-child(3n+1)
					&:not(:last-child)
						text-align right
					
					&:last-child
						text-align center
				
				&:nth-child(3n+2)
					&:not(:last-child)
						text-align center
		
		@media (min-width desktop)
			width auto
			
			&:not(:last-child)
				padding-right 36px
				
				&:after
					display inline-block

	&__text
		cursor pointer
		
		.cat__item--active &
			position relative
			
			&:after
				@extend $pseudo, $abs
				
				width 100%
				height 3px
				background-color blue
				left 0
				bottom -5px