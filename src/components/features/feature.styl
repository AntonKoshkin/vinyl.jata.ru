.feature
	position relative
	display inline-block
	font-size 0
	margin-left 3px
	margin-right 3px
	
	&:not(:nth-child(n+3))
		margin-bottom 20px
	
	&__shadow
		position absolute
		width 83%
		height 100%
		transform skewX(-10deg)
		bottom 0
		left 0
		transform-origin left bottom
		box-shadow 5px 5px 6px rgba(black, .8)

	&__img
		width 193px
		position relative
	
	&__titles
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		padding-top 20px
		padding-left 24px
		display flex
		flex-direction column
		align-items flex-start
	
	@media (min-width tablet)
		margin-left 0
		
		&:not(:nth-child(n+3))
			margin-bottom 0
		
		&:not(:last-child)
			margin-right -18px
	
	@media (min-width desktop)
		&:not(:last-child)
			margin-right -27px
		
		&__img
			width 305px
		
		&__titles
			padding-top 32px
			padding-left 38px