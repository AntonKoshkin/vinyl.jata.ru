phone-text-white = #fe

phone-bg-gray = #2d2f2e

.phone
	min-width 164px
	min-height 38px
	display flex
	padding-left 12px
	padding-right 12px
	align-items center
	justify-content space-between
	background-color phone-bg-gray
	border-radius 8px

	&__red-phone
		size 13px
		margin-right 5px
	
	&__text
		font-size 1rem
		color phone-text-white
		font-weight 100